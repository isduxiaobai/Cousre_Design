<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    tools:context="com.example.qqlogin.MainActivity" >
    <RelativeLayout
        android:id="@+id/shang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#E6E6E6" >

        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="QQ"
            android:textColor="@android:color/holo_red_light"
            android:textSize="30sp"
            android:textStyle="bold|italic" />
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@id/tv_qq"
            android:layout_centerHorizontal="true"
            android:src="@drawable/touxiang"
            android:scaleType="centerCrop"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/zhong"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@null"
        android:orientation="vertical" >
        <EditText
            android:id="@+id/et_qq_number"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="请输入QQ号码"
            android:textSize="15sp"
            android:textColorHint="#000"
            android:inputType="numberSigned"
            android:singleLine="true"
            android:padding="10dp"
            />
        <EditText
            android:id="@+id/et_qq_psw"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="请输入QQ密码"
            android:textSize="15sp"
            android:textColorHint="#000"
            android:password="true"
            android:padding="10dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/xia"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="#E6E6E6" >

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="#3C8DC4"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/cb_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_alignLeft="@id/btn_login"
            android:text="记住密码"
            android:textColor="@android:color/holo_blue_dark" />

        <Button
            android:id="@+id/btn_no_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:text="无法登录？"
            android:textColor="#5CACEE"
            android:textSize="15sp" />
        <Button
            android:id="@+id/btn_newUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新用户？"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:textSize="15sp"
            android:layout_marginRight="15dp"
            android:textColor="#5CACEE"
            />
    </RelativeLayout>
</LinearLayout>